{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "controller/**/*",
        "routes/**/*",
        "services/**/*",
        "models/**/*",
        "server.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "dist"
    ]
}